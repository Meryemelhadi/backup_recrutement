/* shapes */
.star-five {
   margin: 5px 0;
   position: relative;
   display: block;
   color: yellow;
   width: 0px;
   height: 0px;
   border-right:  10px solid transparent;
   border-bottom: 7px  solid yellow;
   border-left:   10px solid transparent;
   -moz-transform:    rotate(35deg);
   -webkit-transform: rotate(35deg);
   -ms-transform:     rotate(35deg);
   -o-transform:      rotate(35deg);
}
.star-five:before {
   border-bottom: 8px solid yellow;
   border-left: 3px solid transparent;
   border-right: 3px solid transparent;
   position: absolute;
   height: 0;
   width: 0;
   top: -4.5px;
   left: -6.5px;
   display: block;
   content: '';
   -webkit-transform: rotate(-35deg);
   -moz-transform:    rotate(-35deg);
   -ms-transform:     rotate(-35deg);
   -o-transform:      rotate(-35deg);

}
.star-five:after {
   position: absolute;
   display: block;
   color: red;
   top: 0.3px;
   left: -10.5px;
   width: 0px;
   height: 0px;
   border-right: 10.0px solid transparent;
   border-bottom: 7px solid yellow;
   border-left: 10px solid transparent;
   -webkit-transform: rotate(-70deg);
   -moz-transform:    rotate(-70deg);
   -ms-transform:     rotate(-70deg);
   -o-transform:      rotate(-70deg);
   content: '';
}

/* yellow star*/
.star-five.yellow {
   color: #FFC000;
   border-bottom-color:#FFC000;
}
.star-five.yellow:before {
   border-bottom-color:#FFC000;
}
.star-five.yellow:after {
   color: #FFC000;
   border-bottom-color: #FFC000;
}

/* green star*/
.star-five.green {
   color: #7FBA00;
   border-bottom-color:#7FBA00;
}
.star-five.green:before {
   border-bottom-color:#7FBA00;
}
.star-five.green:after {
   color: #7FBA00;
   border-bottom-color:#7FBA00;
}

